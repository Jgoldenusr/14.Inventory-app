<h1><%= title %></h1>
<form method="POST" action="">
  <div class="form-group">
    <label for="name">Nombre:</label>
    <input
      class="form-control"
      id="name"
      type="text"
      placeholder="Armas, Aviones, Utensilios, etc."
      name="name"
      value="<%= data == null ? '' : data.name; %>"
    />
  </div>
  <div class="form-group">
    <label for="description">Descripcion:</label>
    <textarea
      class="form-control"
      id="description"
      type="textarea"
      placeholder="Descripcion..."
      name="description"
      required="true"
    >
<%= data===null ? '' : data.description; %></textarea
    >
  </div>
  <button class="btn btn-primary" type="submit">Ingresar</button>
</form>

<% if (error) { %>
<ul>
  <% error.forEach(function(err){%>
  <li><%= err.msg %></li>
</ul>
<% })}%>
